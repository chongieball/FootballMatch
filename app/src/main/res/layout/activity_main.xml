<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.project.chongieball.footballmatch.MainActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabMode="fixed">

        <android.support.design.widget.TabItem
            android:id="@+id/tabLast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Match"
            android:icon="@drawable/ic_last"
            />

        <android.support.design.widget.TabItem
            android:id="@+id/tabNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next Match"
            android:icon="@drawable/ic_next"/>

    </android.support.design.widget.TabLayout>

    <FrameLayout
        android:id="@+id/flMatch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tl" />

</android.support.constraint.ConstraintLayout>
